<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/actionbar</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ToolbarWhiteBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/GBL3</item>
        <item name="android:textSize">@dimen/font_size_nano</item>
        <item name="android:textColorPrimary">@color/grofers_orange</item>
    </style>


    <style name="Theme.AppCompat.Light.NoActionBar.Dark" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimaryDark">@color/actionbar</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/actionbar</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:logo">@drawable/app_logo</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>
        <item name="android:actionMenuTextColor">@color/actionBarTextColor</item>
        <item name="android:windowActionBar">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/statusbar</item>

        <!-- Support library compatibility -->
        <item name="logo">@drawable/app_logo</item>
        <item name="windowActionBar">true</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/TabTextStyle</item>
        <item name="actionMenuTextColor">@color/actionBarTextColor</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <!-- general styles for the action bar -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@color/actionBarBackground</item>
        <item name="android:backgroundStacked">@color/actionBarBackground</item>
        <item name="android:backgroundSplit">@color/actionBarBackground</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@color/actionBarBackground</item>
        <item name="backgroundStacked">@color/actionBarBackground</item>
        <item name="backgroundSplit">@color/actionBarBackground</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black_333333</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="style0">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/grofers_orange</item>
    </style>
    <style name="TextStyle">
        <item name="android:textColor">@color/light_grey_666666</item>
    </style>

    <!--Segmented Radio Button -->
    <style name="RadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">@dimen/list_text_size_xmedium</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
    </style>
    <style name="SupportRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/grofers_orange</item>
        <item name="colorPrimaryDark">@color/BLU1</item>
        <item name="colorAccent">@color/BLU6</item>
        <item name="windowActionBar">false</item>
    </style>



    <!-- ParallexHeaderView -->
    <style name="ParallexHeaderTheme" parent="TransparentTheme"/>

    <style name="TransparentTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!--
                <item name="windowActionBar">false</item>
        -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.Transparent</item>
        <item name="actionBarStyle">@style/ActionBarStyle.Transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <!--homeAsUp|showHome|-->
    <style name="ActionBarStyle.Transparent" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>
        <item name="titleTextStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>
    </style>

    <style name="ActionBarStyle.Transparent.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Toolbar style white background and black text -->
    <style name="AppCompatThemeLightToolbar" parent="NoActionBarTheme"/>

    <style name="NoActionBarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle.ThemeWhite</item>
        <item name="actionBarStyle">@style/ActionBarStyle.ThemeWhite</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="ActionBarStyle.ThemeWhite" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.ThemeBlack.TextStyle</item>
        <item name="titleTextStyle">@style/ActionBarStyle.ThemeBlack.TextStyle</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/GBL1</item>
    </style>

    <style name="ActionBarStyle.ThemeBlack.TextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black_333333</item>
    </style>

    <style name="TutorialTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">#33000000</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>


    <style name="Transparent" parent="android:Theme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">#00000000</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>


    <style name="Theme.AppCompat.Light.NoActionBar.Black" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>


    <style name="Theme.AppCompat.Light.NoActionBar.Transparent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">#00000000</item>
        <item name="colorPrimaryDark">#00000000</item>
        <item name="android:background">#00000000</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="GLB5Theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/GBL5</item>
    </style>

    <style name="NullBackgroundTheme" parent="@style/Theme.AppCompat.Light.NoActionBar.Dark">
        <item name="android:windowBackground">@null</item>
        <item name="colorControlNormal">@color/actionbar_icon</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar.Dark">
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="TransparentCompat" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:background">@null</item>
        <item name="background">@null</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>



    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="SubmitTextStyle">
        <item name="android:background">@drawable/checkout_button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_icon_size_16</item>
    </style>

    <style name="ToolbarWithMaterialIcon">
        <item name="contentInsetLeft">6dp</item>
        <item name="contentInsetStart">6dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="ToolbarWithNoInset">
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThankYouPageRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_d8d8d8</item>
        <item name="colorControlActivated">@color/grofers_orange</item>
    </style>

</resources>
